<div class="row">
    {{#each notes}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-betwen align-item-center">{{title}}<a href="/notes/edit/{{_id}}"><i class="fa fa-pencil"></i></a>
                    </h4>
                    <p>{{description}}</p>
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                       <button class="btn btn-danger btn-block btn-sm" type="submit">delete</button>
                    </form>
                </div>
            </div>
        </div>
    {{/each}}
</div>