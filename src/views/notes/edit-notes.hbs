<div class="cold-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>
                Edit Note
            </h3>
        </div>
        <form action="/notes/edit/{{note.id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
            <input type="text" name="title" value="{{note.title}}"class="form-control" placeholder="" autofocus>
        </div>
            <div class="form-group">
                <textarea name="description" placeholder="" class="form-control" >{{note.description}}</textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Save</button>
            </div>
        </form>
    </div>
</div>